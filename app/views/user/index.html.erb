<% @search_bar = "no-search" %>
<div class="row"> 
	<div class="column small-12 text-center">
		<img src="#"/>
	</div>

</div>
<!-- Form Area -->

<div class="row">
	<form data-abide>
		<div class="column small-12 medium-6 large-6">
			<div class="row">
				<div class="column small-12 large-centered medium-centered">
					<!-- Email Field -->
					<div class="email-field">
					    <label>Email <small>required</small>
					      <input type="email" required>
					    </label>
					    <small class="error">An email address is required.</small>
				  </div>
				  <!-- Ends Email-->
				</div>
			</div>
			<div class="row">
				<div class="column small-12 large-centered medium-centered">
					<%= render 'password_field' %>
				</div>
			</div>
			<div class="row">
				<div class="column small-6">
		      <input id="checkbox1" type="checkbox">
		      <label for="checkbox1">Remember Me</label>
				</div>
				<div class="column small-6 end text-right">
					<a href="#" data-reveal-id="myModal">Forgot Password</a>
				</div>
			</div>
			<div class="row">
				<div class="column small-12 large-centered medium-centered">
					<a href="#" class="button expand">Sign In</a>
				</div>
			</div>
			<div class="row">
				<div class="column small-12 large-centered medium-centered text-center">
					<p> Don't have an account? <%= link_to "Sign Up Now", user_sign_up_path %></p>
				</div>
			</div>
		</div>
	</form>
	<!-- Social Stuff-->
	<div class="column small-12 medium-5 large-5">
		<div class="row">
			<div class="column small-12 large-centered medium-centered text-center">
				<p> or sign in with</p>
			</div>
		</div>
		<div class="row">
			<div class="column small-12 large-centered medium-centered">
				<a href="#" class="button expand">Facebook </a>
				<a href="#" class="button expand">Google Plus </a>
			</div>
		</div>	
	</div>
</div>


<div id="myModal" class="reveal-modal" data-reveal>
	<h2>Forgot Password</h2>
	<p class="lead">Some text about what to do here.</p>
	<div class="row">
		<div class="large-12 columns">
			<label>Email Address
				<input type="text" placeholder="Email Address" />
			</label>
		</div>
	</div>
	<div class="row">
		<a href="#" class="button ">Send Password</a>
	</div>
	<a class="close-reveal-modal">&#215;</a>
</div>
