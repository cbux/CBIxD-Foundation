<% @search_bar = "no-search" %>

<div class="row">

    <div class="small-12 large-12 columns">
        <div class="row">
            <h1>Saved Searches and Job Alerts</h1>
            <h5>Manage saved searches by deleting searches and alerts or updating the desired alert frequency.</h5>
        </div>
    </div><!--close column-->

        <div class="row">
            <hr />
            <div class="small-1 columns">
                <img class="placeholder delete_search" src="<%= image_path ('icon_placeholder.png') %>" alt="delete icon"/>
            </div>

            <div class="small-11 columns">
            <h5>Interaction Designer Jobs in Atlanta, GA</h5>

                <div class="row">
                    <div class="small-4 large-2 columns">
                        <label>Alert Frequency</label>
                    </div>
                    <div class="small-3 large-2 columns">
                        <input type="radio" id="dailyfrequency"><label for="dailyfrequency">Daily</label>
                    </div>
                    <div class="small-5 large-8 columns">
                        <input type="radio" id="weeklyfrequency"><label for="weeklyfrequency">Weekly</label>
                    </div>
                </div>
            </div>
            <hr />
        </div>

</div><!--close row-->