<div class="row reverse">
	<div class="column medium-12 large-2 left ">
		<h1>My Career</h1>
		<ul class="side-nav hide-for-medium-down">
		  <li><a href="#recommendations">Recommendations</a></li>
		  <li><a href="#saved-jobs-apps">Saved Jobs</a></li>
		  <li><a href="#job-alerts">Job Alerts</a></li>
		  <li><%= link_to "Account Settings", account_path %></li>
		</ul>
	</div>

	<div class="column small-12 large-3 right">
		<!-- RESUMES -->
		<h2 id="resumes">Resumes</h2>
		<div class="row">
			<div class="column small-12">
				<% 3.times do |i| %>
					<ul class="inline-list">
						<li><a>Resume Name Here <%= i %></a></li>
						<li class="right">
							<%= link_to url_for(success: "true", status: "resume_deleted"), onclick: "$(this).parent().parent().remove();" do %>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
						</li>
						<li class="right">
							<%= link_to resumes_preview_path do %>
								<i class="fa fa-pencil fa-lg"></i>
							<% end %>
						</li>
					</ul>
				<% end %>
			</div>
		</div>
		<%= link_to "Upload Resume", resumes_post_path, class: "button expand" %>
		<!-- END RESUMES -->
		
		<!-- COVER LETTERS -->
		<h2 id="cover-letters">Cover Letters</h2>
		<div class="row">
			<div class="column small-12">
				<% 2.times do |i| %>
					<ul class="inline-list">
						<li><a>Cover Letter Name <%= i %></a></li>
						<li class="right">
							<%= link_to url_for(success: "true", status: "cover_letter_deleted"), onclick: "$(this).parent().parent().remove();" do %>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
						</li>
						<li class="right">
							<%= link_to resumes_cover_letter_path do %>
							<i class="fa fa-pencil fa-lg"></i>
							<% end %>
						</li>
					</ul>
				<% end %>
			</div>
		</div>
		<%= link_to "Upload Cover Letter", resumes_cover_letter_path, class: "button expand" %>
		<!-- END COVER LETTERS -->
	</div>

	<div class="column small-12 large-7 left">
		<!-- RECCOMMENDATIONS -->
		<h2 id="recommendations">50 Recommendations</h2>
		<div class="row">
			<% 10.times do %>
				<%= render 'jobs/job_result' %>
			<% end %>
		</div>
		<a class="button">See All Recommendations</a>
		<!-- END RECCOMMENDATIONS -->
		
		<!-- SAVED JOBS -->
		<h2 id="saved-jobs-apps">30 Saved Jobs & Applications</h2>
		<div class="row">
			<% 5.times do %>
				<div class="column small-12">
					<h5>Interaction Designer</h5>
					<p>ABC Consulting Group | Atlanta, GA</p>
					<p><b>Expires 7/1/15</b></p>
					<hr />
	        <!--TODO add progress bar-->
	        <p>Progress Bar Placeholder</p>
	        <a href="#" class="button">Next Step: Apply</a>
	        <p>Add Notes</p>
	        <a href="../recommendations/similarrecs">See Similar Jobs</a>
	        <hr />
	    	</div>
			<% end %>
		</div>
		<a class="button">See All Saved Jobs & Applications</a>
		<!-- END SAVED JOBS -->

		<!-- JOB ALERTS -->
		<h2 id="job-alerts">5 Job Alerts</h2>
		<div class="row">
			<% 5.times do %>
				<div class="small-12 columns">
					<h5>Interaction Designer Jobs in Atlanta, GA</h5>
					<p>Alert Frequency</p>
					<label for="dailyfrequency">
						<input type="radio" id="dailyfrequency">
						Daily
					</label>
					<label for="weeklyfrequency">
						<input type="radio" id="weeklyfrequency">
						Weekly
					</label>
	    	</div>
			<% end %>
		</div>
		<a class="button">See All Job Alerts</a>
		<!-- END JOB ALERTS -->
	</div>
</div>