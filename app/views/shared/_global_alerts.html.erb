<% if params[:warning] == 'true' %>
	<div data-alert class="alert-box true warning">
		<div class="row">
			<div class="column small-12 medium-12 large-12">
				<%= @warning_message.html_safe %>
			</div>
		</div>
	</div>
<% end %>
