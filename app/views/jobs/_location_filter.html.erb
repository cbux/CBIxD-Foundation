<div class="row" id="location-filter">
  <div class="column small-12">
  	<label>Location</label>
  	<label>
  		<input type="checkbox" class="filter-all" checked name="all">
  		All
  	</label>
		<% @location_filters.each do |key, value| %>
    	<label>
        <input type="checkbox" class="filter" name="<%= value %>">
        <%= key %>
    	</label>
		<% end %>
	</div>
</div>