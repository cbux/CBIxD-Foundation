<div class="row" id="job-type-filter">
	<div class="column small-12">
  	<label>Job Type</label>
        <label>
        <input type="checkbox" class="filter-all" checked name="all">
        All
    </label>
	</div>
  <% @job_type_filters.each do |key, value| %>
    <div class="column small-12">
    	<label>
    		<input type="checkbox" class="filter" name="<%= value %>">
    		<%= key %>
    	</label>
  	</div>
  <% end %>
</div>