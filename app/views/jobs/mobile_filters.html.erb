<div class="row">
  <div class="small-12 columns">
    <h4>Filter By</h4>
    <!--Distance from you-->
    <%= render 'distance_within_filter' %>
        <!--Date Posted-->
    <!-- TODO Style this radio list to our tag/radio list-->
    <%= render 'date_posted_filter' %>
    <!--Job Type-->
    <% render 'job_type_filter' %>
    <%= render 'shared/multiselect_field', multiselect_label: "Job Type", multiselect_id: "job-type-filter", hash_for_options: @job_type_filters %>
        <!--Salary-->
        <%= render 'salary_range_filter' %>
    <!--Location (City/State)-->
    <%= render 'shared/multiselect_field', multiselect_label: "Location", multiselect_id: "location-filter", hash_for_options: @location_filters %>
        <!--Job Category-->
    <%= render 'shared/multiselect_field', multiselect_label: "Job Categories", multiselect_id: "job-category-filter", hash_for_options: @job_category_filters %>
    <!--Job Level-->
    <%= render 'shared/multiselect_field', multiselect_label: "Job Level", multiselect_id: "job-level-filter", hash_for_options: @job_level_filters %>
        <!--Degree Required-->
    <% render 'degree_required_filter' %>
    <% render 'shared/multiselect_field', multiselect_label: "Degree Required", multiselect_id: "degree-required-filter", hash_for_options: @degree_requirements_filters %>
        <input id="mobileapplyswitch" type="checkbox"><label for="mobileapplyswitch">Mobile Apply Only</label>
<div class="mobile-filters-whitespace"
    <a href="../jobs" class="button" id="mobile-apply-fixed">Apply Filters</a>
    <a href="../jobs" class="button secondary" id="mobile-apply-clear">Clear All</a>
</div>