<div class="row">
	<div class="column small-12 medium-9 medium-centered">
		<h1>Create Resume</h1>
	</div>
</div>

<!-- Progress steps-->
<div class="row">
	<div class="column small-12 medium-10 medium-centered">
		<ol class="progress_resume">
			<li data-step="1">
				Profile
			</li>
			<li data-step="2">
				Work History
			</li>
			<li data-step="3">
				Education
			</li>
			<li data-step="4" class="progress_resume_last is-active">
				Preview
			</li>
		</ol>
	</div>
</div>
<!-- Progress steps End-->

<div class="row">
	<div class="column small-12 medium-9 medium-centered">
		<% @show_show = "" %>
		<% @edit_show = "hide" %>
		<%= render 'resumes/resume_preview' %>
	</div>
</div>

<div class="row">
	<div class="column small-12 large-9 large-centered">
		<% if params[:controller] == "resumes" %>
    	<%= link_to "Save Resume", "#", class: "button expand" %>
    <% elsif params[:controller] == "apply" && @has_screener == "false" %>
    	<%= link_to "Send Application", jobs_after_apply_path, class: "button expand" %>
    <% elsif params[:controller] == "apply" && @has_screener == "true" %>
    	<%= link_to "Attach Resume", url_for(step: "upload",resume: "attached"), class: "button expand" %>
    <% end %>
  </div>
</div>




