<% @show_show = "" %>
<% @edit_show = "hide" %>
<div class="row">
	<div class="column small-12 medium-9 medium-centered">
		<h1>Create Resume</h1>
	</div>
</div>

<!-- Progress steps-->
<div class="row">
	<div class="column small-12 medium-10 medium-centered">
		<ol class="progress_resume">
		  <li  data-step="1">
		    Profile
		  </li>
		  <li data-step="2">
		    Work History
		  </li>
		  <li   data-step="3" >
		    Education
  		  </li>
  		   <li  data-step="4" class="progress_resume_last is-active">
		    Preview
  		  </li>
		</ol>

	</div>
</div>
<div class="row">
	<div class="column small-12 medium-9 medium-centered">
		<%= render 'resumes/resume_preview' %>
	</div>
</div>


		<!-- Save Section button -->


<div class="row">
	<div class="column small-8 medium-6 medium-centered ">
		<% if params[:controller] == "resumes" %>
    	<div class="button expand"> Save Resume</div>
    <% elsif params[:controller] == "apply" && @has_screener == "false" %>
    	<div class="button expand">Send Application</div>
    <% elsif params[:controller] == "apply" && @has_screener == "true" %>
    	<div class="button expand">Continue to Screener</div>
    <% end %>
    </div>
</div>




