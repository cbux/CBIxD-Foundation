<div class="row">
	<div class="column small-12 medium-9 medium-centered">
		<h1>Create Resume</h1>
	</div>
</div>

<!-- MOBILE LEAD PROGRESS STEPS -->
<% @step_two = "is-active" %>
<%= render 'apply/mobile_lead_steps' %>
<!-- END MOBILE LEAD PROGRESS STEPS -->

<div class="row">
	<div class="column small-12 medium-9 medium-centered">
 

		<!-- Show the work experience partial -->
 
<div id ="experience"></div>
<div class ="work-experience hide">
	<div class="row">
		<div class="column small-7 medium-9">
			<h2>Job Title</h2>
			<p>
				Company Name
				<br>
				April 2007 to Present
				<br/>
				$52,000 per year <i class="fa fa-circle fa-1" style="font-size: .25em;"></i> $8,000 bonus
			</p>
		</div>

		<div class="column small-5 medium-3">
			<ul class="inline-list right">
				
			 	<li>
				 	<a data-equalizer-watch class="edit-experience">
						<i class="fa fa-pencil fa-lg"></i>
					</a>
				</li>

			 	<li>
			 		<a data-equalizer-watch class="delete-experience">
						<i class="fa fa-trash fa-lg"></i>
					</a>
			 	</li>
			</ul>
		</div>
		<div class="column small-12">
			<ul>
				<li>Reviewed architectural drawings and completed budget estimates with project manager.</li>
				<li>Organize job site personnel for on schedule completion of the project.</li>
				<li>Prepare closeout packages for the architect and engineer.</li>
				<li>Project, First Niagara Bank expansion.</li>
			</ul>
		</div>

	</div>
</div>
<div class="work-experience-add">
	<div class="row">
		<div class="column small-12">
			<label>Job Title
				<input type="text" placeholder="" value="" />
			</label>	
		</div>
	</div>
	<div class="row">
		<div class="column small-12">
			<label>Company
				<input type="text" placeholder="" value="" />
			</label>	
		</div>
	</div>
	<div class="row">
		<div class="column small-12">
			<label>Description
				<textarea type="text" placeholder="Tell us what you did each day at this job" value=""></textarea>
			</label>	
		</div>
	</div>
	<%= render 'shared/salary_job' %>
	<%= render 'shared/time_start_end_fields' %>
	<div class="row">
		<div class="column small-3 medium-2">
			<a id="save-new-position" class="button small">Save</a>
		</div>
		<div class="column small-9 medium-10">
			<a id="cancel-new-position" class="button small secondary">
				Cancel
			</a>
		</div>
	</div>
</div>

<div class="work-experience-edit hide">
	<div class="row">
		<div class="column small-12">
			<label>Job Title
				<input type="text" placeholder="Edit Current Job Position" value="" />
			</label>	
		</div>
	</div>
	<div class="row">
		<div class="column small-12">
			<label>Company
				<input type="text" placeholder="Current Company" value="" />
			</label>	
		</div>
	</div>
	<div class="row">
		<div class="column small-12">
			<label>Description
				<textarea type="text" placeholder="Tell us what you did each day at this job" value=""></textarea>
			</label>	
		</div>
	</div>
	<%= render 'shared/salary_job' %>
	<%= render 'shared/time_start_end_fields' %>
	<div class="row">
		<div class="column small-3 medium-2">
			<a id="save-edit-position" class="button small">Save</a>
		</div>
		<div class="column small-9 medium-10">
			<a id="cancel-edit-position" class="button small secondary">
				Cancel
			</a>
		</div>
	</div>
</div>
		<!-- Add position button -->
	 
		<a  id="add-new-position" class="button secondary expand" href="#">Add Position</a>
		
		<hr/>

   	<%= link_to "Next", url_for(step: "mobile-lead-edu"), class: "button expand" %>
   	<%= link_to "Cancel", url_for(step: "mobile-lead"), class: "button secondary expand" %>

	</div>
</div>