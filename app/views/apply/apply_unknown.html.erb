<% @search_bar = "no-search" %>

<% if params[:step] == "upload" %>
	<%= render 'resume_upload' %>
<% elsif params[:step] == "mobile-lead" %>
	<%= render 'mobile_lead' %>
<% elsif params[:step] == "mobile-lead-work" %>
	<%= render 'mobile_lead_work' %>
<% elsif params[:step] == "mobile-lead-edu" %>
	<%= render 'mobile_lead_edu' %>
<% elsif params[:step] == "mobile-lead-preview" %>
	<%= render 'mobile_lead_preview' %>
<% elsif params[:step] == "screener" %>
	<%= render 'apply_screener' %>
<% else %>
	<% @sign_up_type = "apply" %>
	<%= render 'signin_guest' %>
<% end %>