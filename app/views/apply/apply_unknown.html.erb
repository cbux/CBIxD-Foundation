<% @search_bar = "no-search" %>
<div class="row">
	<div class="column small-12 ">
		<h2 class="subheader">Applying to</h2>
	</div>

	<div class="column small-12 ">
		<h1>Sales Coordinator – Inside Sales Representative – Account Executive – Sales Representative</h1>
	</div>
</div>


<!--Saved resume list-->
<div class="row">
	<div class="column small-12 ">
		<h4>Apply Options</h4>
	</div>
</div>

<%= render 'resumes/upload_resume' %>

<!-- Saved Cover Letter List-->

<div class="row">
	<div class="column small-12 ">
		<h4>Include Cover Letter (Optional)</h4>
	</div>
</div>
<div class="row">
	<div class="column small-12">
		 <textarea placeholder="" rows="4"></textarea>
	</div>
</div>



<!-- Collect password-->

<div class="row">
	<div class="column small-8 ">
	<hr/>
		<h3>Create a password</h3>
		<p> Save your resume and use again next time.</p>
	</div>
</div>

<!-- Password Area-->
<div class="row">
<form data-abide>
	<%= render "user/password_creation_field", password_create_label: "Password" %>
</form>
</div>	


<!-- End Password Area-->


<div class="row">
	<div class="column small-12 medium-4 large-4">
		<div class="button">Send Application</div> 

	</div> 
</div>
