<% @search_bar = "no-search" %>
<div class="row">
	<div class="column small-12 medium-9 medium-centered">
		<div class="row">
			<div class="column small-12 ">
				<h2 class="subheader">Applying to</h2>
				<h1>Sales Coordinator â€“ Inside Sales Representative</h1>
			</div>
		</div>

		<div class="row">
			<ul class="resume accordion" data-accordion>
				<li class="accordion-navigation">
					<a href="#panel1a"><h2>Used a Saved Resume</h2></a>
					<div id="panel1a" class="content active">
						<% 2.times do |i| %>
							<ul class="inline-list">
								<li>
									<input type="radio" id="radio-<%= i %>" name="saved_res" />
									<label for="radio-<%= i %>"><h3>
										Resume Name Here
									</h3></label>
								</li>
								<li class="right small">
									modified 1/1/15
								</li>
							</ul>
						<% end %>
					</div>
				</li>
				<li class="accordion-navigation">
					<a href="#panel2a"><h2>Upload a New Resume</h2></a>
					<div id="panel2a" class="content">
						<%= render 'resumes/upload_resume' %>
					</div>
				</li>
			</ul>
    </div>


		<!-- Saved Cover Letter List-->

		<div class="row">
			<div class="column small-12 ">
				<h4>Include Cover Letter (Optional)</h4>
			</div>
		</div>
		<div class="row">
			<div class="column small-12">
				 <textarea placeholder="" rows="4"></textarea>
			</div>
		</div>



		<!-- Collect password-->

		<div class="row">
			<div class="column small-8 ">
			<hr/>
				<h3>Create a password</h3>
				<p> Save your resume and use again next time.</p>
			</div>
		</div>

		<!-- Password Area-->
		<div class="row">
		<form data-abide>
			<%= render "user/password_creation_field", password_create_label: "Password" %>
		</form>
		</div>	


		<!-- End Password Area-->


		<div class="row">
			<div class="column small-12 medium-4 large-4">
				<div class="button">Send Application</div> 

			</div> 
		</div>
	</div>
</div>