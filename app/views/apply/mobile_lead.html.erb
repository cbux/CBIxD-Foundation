<div class="row">
	<div class="column small-12">
		<h1>Create Resume</h1>
	</div>
</div>

<!-- Progress steps-->
<div class="row">
	<div class="column small-12 large-centered">
		<ol class="progress_resume">
		  <li class="is-active" data-step="1">
		    Profile
		  </li>
		  <li  data-step="2">
		    Work History
		  </li>
		  <li   data-step="3" >
		    Education
  		  </li>
  		   <li  data-step="4" class="progress_resume_last">
		    Preview
  		  </li>
		</ol>

	</div>
</div>

<!-- Progress steps End-->

<div class="row">
	<div class="column medium-10 medium-centered">

		<div class="column small-12 medium-6  ">
			<label>First Name
	        <input type="text" />
	      </label>
		</div>

		<div class="column small-12 medium-6 ">
			<label>Last Name
	        <input type="text" />
	      </label>
		</div>

		<div class="column small-12 medium-6 ">
			<label>Email Address
	        <input type="text" />
	      </label>
		</div>


		<div class="column small-12 medium-6 ">
			<label>Phone Number
	        <input type="text" />
	      </label>
		</div>

		<div class="column small-12 medium-6 ">
			<label>City,State or Zipcode
	        <input type="text" />
	      </label>
		</div>

		<div class="column small-12 medium-6 ">
			<label>Work Status
		        <select>
		          <option value="husker">Select One</option>
		          <option value="starbuck">Employment Authorization Document</option>
		          <option value="hotdog">US Citizen</option>
		          <option value="apollo">Green Card Holder</option>
		        </select>
		    </label>
		</div>

	</div>	
   
</div>

<div class="row">
	<div class="column medium-10 medium-centered">
		<div class="column small-12 medium-12 ">
	    	<%= link_to "Next", apply_mobile_lead_work_path, class: "button  expand" %>
	    </div>

	    <div class="column small-12 medium-12 ">
	    	<div class="button secondary  expand"> Cancel</div>
	    </div>
	 </div>
</div>

