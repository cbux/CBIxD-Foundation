<div class="row">
    <div class="small-12 large-12 columns">
        <a href="../jobs">< Back</a>
    </div>
</div>

    <!--branding-->
    <%= render 'top_banner' %>

<!--job header-->
<div class="row">

<% if params[:branding] == "premium" || params[:branding] == "standard" || params[:branding] == "basic" %>

    <div class="columns medium-4 large-3 hide-for-small-only">
        <img src="http://placehold.it/180x180">
    </div><!--close column-->

    <div class="columns small-12 medium-5 large-6 columns">

<% else %>

    <div class="small-12 medium-9 large-10 columns ">

<% end %>

    <h1>CareerBuilder</h1>
    <p>Private | 1,000 - 2,500 employees | Employment, Recruiting, Staffing</p>
    <p>Chicago, IL | Norcross, GA</p>
</div>

<div class="small-12 medium-3 large-2 columns">
    <ul class="button-group">
        <li><%= link_to "View Active Jobs", jobs_path, class: "button small" %></li>
    </ul>
</div><!--close column-->

</div><!--close row-->

<div class="row">

    <div class="small-12 medium-12 large-8 columns">
        <h3> Overview</h3>
        <p>CareerBuilder Sourcing Solutions is the leading business intelligence consulting firm focused on talent. We specialize in job seeker and employee research, human capital consulting and talent sourcing and screening. Our real-time access to job seekers, employees, and employers helps us deepen talent acquisition strategies and swiftly implement recruitment tactics so companies of all sizes realize the best return on their people.</p>   
        <h3>Section Heading</h3>
        <p>We can add additional sections here, such as benefits, awards, testimonials</p>
    </div><!--close columns-->

    <div class="small-12 medium-12 large-4 columns">
        <!--premium video-->
        <% if params[:branding] == "premium" %>
            <%= render 'video' %>
        <% end %>

        <!--premium social media-->
        <% if params[:branding] == "premium" %>
            <%= render 'socialmedia' %>
        <% end %>

        <!--similar jobs at this company-->
        <%= render 'similar_jobs' %>
    </div><!--close columns-->

</div><!--close row-->

<div class="row">
    <div class="left large-12 columns button-bar">
        <ul class="button-group">
            <li><%= link_to "View Active Jobs", jobs_path, class: "button small" %></li>
        </ul>
    </div><!--close button bar columns-->
</div><!--close row-->

<div class="row hide-for-small-only">
<!--branding-->
    <% if params[:branding] == "premium" %>
        <%= render 'bottom_banner' %>
    <% end %>
</div><!--close row-->