									<p class="no-bottom-margin">searches</p>
								</li>
							</ul>
						</div>

				<hr/>
				
			</div>
		<% end %>

	<div class="row" id="resume" data-equalizer>
				
					<div class="column small-6">
						<h2><%= link_to "Software Engineer", resumes_preview_path %></h2>
						 4 days ago   <span class="label secondary [radius round]" style="margin-left:10px;">Private Resume</span> 
					</div>

					
						<div class="column small-3 ">
							<ul class="inline-list">
								<li>
									<h1 style="font-size: 2.25rem; color:#eee;">0</h1>
								</li>
								<li class="text-center">
									<i class="fa fa-eye fa-lg no-bottom-margin" style="color:#eee;"></i>
									<p class="no-bottom-margin" style="color:#eee;">views</p>
								</li>
							</ul>
						</div>
					
						
						<div class="column small-3 ">
							<ul class="inline-list">
								<li>
									<h1 style="font-size: 2.25rem; color:#eee;">0</h1>
								</li>
								<li class="text-center">
									<i class="fa fa-search fa-lg no-bottom-margin" style="color:#eee;"></i>
									<p class="no-bottom-margin" style="color:#eee;">searches</p>
								</li>
							</ul>
						</div>
					
				<hr/>
				
			</div>



		<% if session[:resumes].to_i < 3 %>
			<%= link_to "Add Resume", resumes_post_path(step: "upload"), class: "button small expand"  %>
		<% end %>
	</div>
</div>





