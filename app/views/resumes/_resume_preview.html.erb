<%= render 'resume_upload_steps' %>
<div class="row">
	<div class="column large-9 large-centered">
		<div class="row">
			<div class="column small-10 medium-11">
				<h2>Paul Johnson</h2>
				<p>
					<strong>Assistant Project Manager</strong>
					<br>
					Paul.Johnson@youremail.com | Atlanta, Ga. 30123
				</p>
				<p>
					<strong>Public Resume</strong>
					Visible to employers searching resumes.
				</p>
			</div>
			<div class="column small-2 medium-1 text-right">
				<a href="#">Edit</a>
			</div>
		</div>
		
		<hr/>

		<!-- EXPERIENCE -->
		<div class="row">
			<div class="column large-12">
				<h3>Work Experience</h3>
			</div>
		</div>
		<% @exp = 0 %>
		<% 2.times do %>
			<%= render 'work_experience_entry' %>
			<% @exp += 1 %>
			<hr/>
		<% end %>
		<%= render 'work_experience_entry' %>
		<div class="row">
			<div class="column small-12">
				<div class="button expand secondary">Add Position</div>
			</div>
		</div>
		
		<hr>
		
		<!-- EDUCATION -->
		<div class="row">
			<div class="column large-12">
				<h3>Education</h3>
			</div>
		</div>
		<% @edu = 0 %>
		<%= render 'education_entry' %>
		<div class="row">
			<div class="column small-12">
				<div class="button expand secondary">Add Education</div>
			</div>
		</div>
		
		<hr>

		<div class="row">
			<div class="column large-12">
				<h3>Skills</h3>
			</div>
		</div>
		<%= render 'skills_entry' %>
		
		<hr/>

		<div class="row">
			<div class="column large-12">
				<h3>Languages</h3>
			</div>
		</div>
		<div class="row">
			<div class="column large-9">
				<h5>Engligh</h5>
				<p>Native or Bilingual</p>
			</div>
			<div class="column large-3 text-right">
				<a href="#">Edit</a>
			</div>
		</div>

		<div class="row">
			<div class="column small-12">
				<div class="button expand secondary">Add Language</div>
			</div>
		</div>
		
		<hr/>

		<div class="row">
			<div class="column small-12 large-centered">
				<a class="button expand" href="../recommendations/resumerecs">View Recomendations</a>
			</div>
		</div>
	</div>	
</div>