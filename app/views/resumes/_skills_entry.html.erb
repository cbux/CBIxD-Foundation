<% @skills = ["Interface", "Icon", "Typography", "Color", "Design", "Illustration", "Component", "Misc", "Infrastructure", "Application", "Mobile", "Desktop"] %>

<% @skills_list = @skills.to_s.gsub(/\"/, "").gsub(/\[/, "").gsub(/\]/, "") %>

<div class="skills-show">
	<div class="row">
		<div class="column small-10 medium-9">
			<ul class="tags" id="skills">
				<% @skills.each do |skill| %>
			    <li><a><%= skill %></a></li>
			  <% end %>
		  </ul>
		</div>
		<!-- <div class="column small-2 medium-3">
			<ul class="inline-list right">
				<li>
					<a data-equalizer-watch onclick="$('.skills-show').toggleClass('hide');$('.skills-edit').toggleClass('hide');">
						<i class="fa fa-pencil fa-lg"></i>
					</a>
				</li>
			</ul>
		</div> -->
	</div>
	<div class="row collapse" id="skill_form">
		<div class="column small-8">
			<label>Add New Skills
				<input type="text" id="skills_entry"/>
			</label>
		</div>
		<div class="column small-4">
			<a class="button postfix" id="double-half-bump">Add</a>
		</div>
	</div>
</div>

<div class="skills-edit hide">
	<div class="row">
	  <div class="column small-12 medium-12">
	    <textarea type="text"><%= @skills_list %></textarea>
	  </div>
	 </div>



	  	<div class="row">
			<div class="column small-3 medium-2">
				<a onclick="$('.skills-show').toggleClass('hide');$('.skills-edit').toggleClass('hide');" class="button small">
					Save
				</a>
			</div>
			<div class="column small-9 medium-10">
				<a onclick="$('.skills-show').toggleClass('hide');$('.skills-edit').toggleClass('hide');" class="button small secondary">
					Cancel
				</a>
			</div>
		</div>
	
</div>