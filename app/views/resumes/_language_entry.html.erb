<% @show_show ||= "" %>
<% @edit_show ||= "hide" %>
<div class="lang-show <%= @show_show %>">
	<div class="row">
		<div class="column small-7 medium-9">
			<ul class="tags lang">
				<li>
					<a>
						<p class="no-bottom-margin"><strong>English</strong></h5>
						<p>Native or Bilingual</p>
					</a>
				</li>
				<li>
					<a>
						<p class="no-bottom-margin"><strong>Spanish</strong></h5>
						<p>Elementary</p>
					</a>
				</li>
			</ul>
		</div>
		<div class="column small-5 medium-3">
			<ul class="inline-list right">
				<li>
			 		<a data-equalizer-watch onclick="$('.lang-show').toggleClass('hide');$('.lang-edit').toggleClass('hide');">
			 			<i class="fa fa-pencil fa-lg"></i>
			 		</a>
			 	</li>
			</ul>
		</div>
	</div>
</div>

<div class="lang-edit <%= @edit_show %>">
	<div class="row" data-equalizer>
		<div class="column small-6 medium-9" data-equalizer-watch>
			<%= render 'resumes/language_proficiency_field', selected_lang: "English", selected_lang_prof: "Native or bilingual proficiency" %>
			<%= render 'resumes/language_proficiency_field', selected_lang: "Spanish", selected_lang_prof: "Elementary proficiency" %>
		</div>
	</div>

  	<div class="row">
		<div class="column small-3 medium-2">
			<a onclick="$('.lang-show').toggleClass('hide');$('.lang-edit').toggleClass('hide');" class="button small">
				Save
			</a>
		</div>
		<div class="column small-9 medium-10">
			<a onclick="$('.lang-show').toggleClass('hide');$('.lang-edit').toggleClass('hide');" class="button small secondary">
				Cancel
			</a>
		</div>
	</div>
